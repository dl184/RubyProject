<h1>All bookings</h1>

<form method ="get" action ="/signed_up/new">
  <input class ="w3-button w3-border w3-hover-red" type ="submit" value ="Add member to class"/>
</form>

<table>
  <tr>
    <th>Name</th>
    <th>Class</th>
    <th></th>
  </tr>
<% for signed_up in @signed_up %>
<tr>
  <td><%= signed_up.member.first_name %> </td>
  <td><%= signed_up.gymclass.title %> </td>
  <td>
    <form action="/signed_up/<%= signed_up.id %>/delete" method="POST">
      <input class="btn btn --danger" type="submit" value="Delete" />
    </form>
  </td>
</tr>
<% end %>
</table>
